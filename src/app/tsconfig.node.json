{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "tools"
  ],
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "composite": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "types": [
      "node",
      "vuetify"
    ]
  }
}