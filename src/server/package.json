{
  "name": "foodily-server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --ext ts --exec \"npm run build && node dist/app.js\"",
    "dev:local": "cross-env SERVER_MODE=local npm run dev",
    "dev:api-only": "cross-env SERVER_MODE=api-only nodemon --ext ts --exec \"npm run build:api-only && node dist/app.js\"",
    "build": "npm run clean && tsc --build && tsc-alias && npm run copy-files",
    "build:api-only": "tsc --build && tsc-alias",
    "clean": "npx rimraf dist",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist/",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path ../../.gitignore"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "connect-ensure-login": "^0.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.5.1",
    "@types/body-parser": "^1.19.5",
    "@types/connect-ensure-login": "^0.1.9",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.20",
    "@types/express-session": "^1.17.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.8.9",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.52.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.2.2",
    "typescript-eslint": "^0.0.1-alpha.0"
  }
}