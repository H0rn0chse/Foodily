{
  "name": "foodily-server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --ext ts --exec \"npm run build && node dist/app.js\"",
    "dev:local": "cross-env SERVER_MODE=local npm run dev",
    "dev:api-only": "cross-env SERVER_MODE=api-only nodemon --ext ts --exec \"npm run build:api-only && node dist/app.js\"",
    "build": "npm run clean && tsc --build && tsc-alias && npm run copy-files",
    "build:api-only": "tsc --build && tsc-alias",
    "clean": "npx rimraf dist",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist/",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path ../../.gitignore"
  },
  "dependencies": {
    "@types/swagger-ui-express": "^4.1.8",
    "body-parser": "^2.2.0",
    "connect-ensure-login": "^0.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-session": "^1.17.3",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/connect-ensure-login": "^0.1.9",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.13",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.31.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  }
}
