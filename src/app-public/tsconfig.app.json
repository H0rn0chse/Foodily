{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.json",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "*.svg"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@project/*": [
        "../../*"
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
  }
}